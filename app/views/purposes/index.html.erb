<p id="notice"><%= notice %></p>

<div id="scaffolding">
  <h1>Purposes</h1>

  <table>
    <thead>
      <tr>
        <th>User</th>
        <th>Goal</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @purposes.each do |purpose| %>
        <tr>
          <td><%= purpose.user %></td>
          <td><%= purpose.goal %></td>
          <td><%= link_to 'Show', purpose %></td>
          <td><%= link_to 'Edit', edit_purpose_path(purpose) %></td>
          <td><%= link_to 'Destroy', purpose, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <div class="other-links">
    <%= link_to 'New Purpose', new_purpose_path %>
    <%= link_to "Return Home", root_path %>
  </div>
</div>